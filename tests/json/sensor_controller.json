      "addr": "0x28",
      "access": "RW",
      "width": 32,
      "r_strobe": true,
      "w_strobe": true
    },
    {
      "name": "mode_reg",
      "addr": "0x30",
      "access": "RW",
      "width": 32
    },
    {
      "name": "debug_reg",
      "addr": "0x100",
      "access": "RW",
      "width": 32
    },
    {
      "name": "timestamp_reg",
      "addr": "0x104",
      "access": "RO",
      "width": 32
